<Window x:Class="EventPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventPlayer"
        d:DataContext="{d:DesignInstance Type=local:Controller}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <local:PlayerControl DataContext="{Binding Players[0]}" />
                <local:PlayerControl DataContext="{Binding Players[1]}" />
            </StackPanel>
            <DataGrid Height="100" d:ItemsSource="{d:SampleData ItemCount=5}"/>

        </StackPanel>
    </Grid>
</Window>
